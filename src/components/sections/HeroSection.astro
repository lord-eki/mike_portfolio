---
import Button from "../ui/button/Button.astro";

interface Cta {
  text: string;
  href: string;
}

interface Props {
  title: string;
  subtitle?: string;
  showCTA?: boolean;
  primaryCTA?: Cta;
  secondaryCTA?: Cta;
  image?: string; 
  alt?: string; 
}

const {
  title,
  subtitle,
  showCTA = false,
  primaryCTA,
  secondaryCTA,
  image,
  alt = "Person image",
} = Astro.props as Props;
---

<section class="w-full py-6 md:py-10">
  <div class="mx-auto max-w-6xl px-4 flex flex-col md:flex-row items-center md:items-start gap-10">
    
    <div class="flex-1 text-center md:text-left">
      <h1 class="text-4xl md:text-6xl font-extrabold tracking-tight text-foreground">
        <span class="bg-gradient-to-r from-[var(--accent)] to-[var(--accent-dark)] bg-clip-text text-transparent">
          {title}
        </span>
      </h1>

      {subtitle && (
        <p class="mt-4 text-lg md:text-xl text-[color:var(--color-text-secondary)] max-w-2xl">
          {subtitle}
        </p>
      )}

      {showCTA && (primaryCTA || secondaryCTA) && (
        <div class="mt-8 flex flex-col sm:flex-row md:justify-start justify-center gap-3">
          {primaryCTA && (
            <Button href={primaryCTA.href} variant="primary" size="md">
              {primaryCTA.text}
            </Button>
          )}
          {secondaryCTA && (
            <Button href={secondaryCTA.href} variant="secondary" size="md">
              {secondaryCTA.text}
            </Button>
          )}
        </div>
      )}
    </div>

    {image && (
      <div class="flex-1 flex justify-center md:justify-end">
        <img
          src={image}
          alt={alt}
          class="w-48 h-48 md:w-64 md:h-64 rounded-full object-cover shadow-xl border-4 border-white"
        />
      </div>
    )}
  </div>
</section>

